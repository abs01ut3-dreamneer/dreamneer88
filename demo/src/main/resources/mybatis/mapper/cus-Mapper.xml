<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.mapper.CusMapper">
	
	<insert id="createPost" parameterType="kr.or.ddit.vo.CusVO">
		<selectKey resultType="int" order="BEFORE" keyProperty="cusNum">
			select NVL(MAX(cus_num), 0) +1 from cus
		</selectKey>
		insert into cus
			values (#{cusNum}, #{cusName}, #{addr}, #{pne})
	</insert>
	
</mapper>