package kr.or.ddit.controller;

import java.time.LocalDateTime;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.format.annotation.DateTimeFormat;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

import kr.or.ddit.service.VisitVhicleService;
import kr.or.ddit.vo.VisitVhcleVO;
import lombok.extern.slf4j.Slf4j;

@Slf4j
@Controller
@RequestMapping("/visit")
public class VisitVhcleController {

    @Autowired
    private VisitVhicleService visitVhicleService;

    // 1. 예약 폼 페이지
    @GetMapping("/reserve")
    public String reserveForm(Model model) {
        String hshldId = getLoginHshldId(); // 로그인한 세대 ID

        // 이번 달 누적 시간
        int accmltTime = visitVhicleService.getAccmltTime(hshldId);

        // 남은시간 계산
        int rmnTime = 120 - accmltTime;

        // 예약 내역 조회
        List<VisitVhcleVO> history = visitVhicleService.getVisitHistory(hshldId);

        model.addAttribute("remainingTime", rmnTime);
        model.addAttribute("accmltTime", accmltTime);
        model.addAttribute("history", history);

        return "visit/reserveForm";
    }

    // 2. 예약하기 처리 (AJAX용 JSON 응답)
    @PostMapping("/reserve")
    @ResponseBody
    public Map<String, Object> reserveAjax(
            @RequestParam String vhcleNo,
            @RequestParam @DateTimeFormat(pattern="yyyy-MM-dd'T'HH:mm") LocalDateTime startDt,
            @RequestParam @DateTimeFormat(pattern="yyyy-MM-dd'T'HH:mm") LocalDateTime endDt) {

        Map<String, Object> result = new HashMap<>();
        try {
            VisitVhcleVO visitVhcleVO = new VisitVhcleVO();
            visitVhcleVO.setHshldId(getLoginHshldId());
            visitVhcleVO.setVhcleNo(vhcleNo);
            visitVhcleVO.setParkngBeginDt(java.sql.Timestamp.valueOf(startDt));
            visitVhcleVO.setParkngEndDt(java.sql.Timestamp.valueOf(endDt));

            int insertResult = visitVhicleService.reserveVhicle(visitVhcleVO);

            if(insertResult > 0) {
                result.put("success", true);

                // 예약 후 남은 시간, 누적시간 계산
                String hshldId = getLoginHshldId();
                int rmnTime = visitVhicleService.getRemainingTime(hshldId);
                VisitVhcleVO latest = visitVhicleService.getLatestVisit(hshldId);

                result.put("remainingTime", rmnTime);
                result.put("accmltTime", latest != null ? latest.getAccmltTime() : 0);
                result.put("now", java.time.LocalDateTime.now().toString());
            } else {
                result.put("success", false);
            }
        } catch (Exception e) {
            e.printStackTrace();
            result.put("success", false);
            result.put("message", e.getMessage());
        }
        return result;
    }

    // 3. 이용내역 조회
    @GetMapping("/history")  
    public String visitHistory(Model model) {
        String hshldId = getLoginHshldId();
        List<VisitVhcleVO> history = visitVhicleService.getVisitHistory(hshldId);
        model.addAttribute("history", history);
        return "visit/history";
    }

    // 로그인한 세대번호 가져오기 (예시)
    private String getLoginHshldId() {
        return "11010101";
    }
}
