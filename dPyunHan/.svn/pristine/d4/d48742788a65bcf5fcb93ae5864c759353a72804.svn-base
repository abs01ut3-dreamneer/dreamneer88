<!-- ====== 폰화면 프레임 (얇게) ====== -->
<style>

:root {
	/* 폭 프리셋 변경 (예: 360, 390, 414 등) */
	--frame-width: 514px;
	--frame-radius: 18px;
}
/* 바깥 배경 & 가운데 정렬 */
body.index-page {
	background: #fff;
	min-height: 100dvh;
	display: flex;
	justify-content: center;
}
/* 프레임: 세로 가득 + 내부 스크롤 */
.mobile-frame {
	width: var(--frame-width);
	min-height: 100dvh; /* 화면 높이 채움 */
	height: 100dvh; /* 프레임 높이를 화면 높이로 고정 */
	box-shadow: 0 10px 30px rgba(0, 0, 0, .12);
	border-radius: var(--frame-radius);
	overflow-x: hidden;
	overflow-y: auto; /* 프레임 내부 스크롤 */
	position: relative;
	display: flex;
	flex-direction: column;
	scroll-behavior: smooth;	/* 네비바로 스크롤 이동 시 부드럽게 해줘요~~ */
}


/* 이미지/표 넘침 방지 */
img, video {
	max-width: 100%;
	height: auto;
}

.table-responsive {
	overflow-x: auto;
}

/* Dewi 헤더가 프레임 안에서 가득 */
.mobile-frame .header {
	/*         상단의 헤더 색  */
	background-color: rgba(100, 140, 164, 0.75);
	top: 0;
	z-index: 1056;
	transition: background-color .25s, box-shadow .25s, backdrop-filter .25s,
		opacity .25s;
	box-shadow: 0 2px 8px rgba(0, 0, 0, .06);
	position: sticky; /*프레임 안에서 헤더가 고정 */
	border-top-left-radius: var(--frame-radius);
	border-top-right-radius: var(--frame-radius);
	overflow: visible;
}

/* Dewi 푸터: 프레임 안에서 하단 고정(sticky) */
.mobile-frame .footer {
	position: sticky;
	bottom: 0; /* 하단에 달라붙기 */
	z-index: 1056;
	background-color: rgba(100, 140, 164, .7);
	box-shadow: 0 -2px 8px rgba(0, 0, 0, .06); /* 위쪽 방향 그림자 */
	transition: background-color .25s, box-shadow .25s, backdrop-filter .25s,
		opacity .25s;
	border-bottom-left-radius: var(--frame-radius);
	border-bottom-right-radius: var(--frame-radius);
	overflow: visible;
	margin-top: auto;
}

.mobile-frame .header.scrolled {
	background: rgba(100, 140, 164, 0.2); /* 투명도 조절: 0.0 ~ 1.0 */
	backdrop-filter: saturate(140%) blur(8px);
	box-shadow: 0 4px 16px rgba(0, 0, 0, .08);
}
/* 스크롤 시 효과(선택사항): 살짝 반투명 + 블러 */
.mobile-frame .footer.scrolled {
	background: rgba(100, 140, 164, .10);
	backdrop-filter: saturate(140%) blur(8px);
	box-shadow: 0 -4px 16px rgba(0, 0, 0, .08);
}

.mobile-frame .container-xl {
	max-width: 100% !important;
	padding: 0 16px;
}

/* 모바일 메뉴 열려도 같은 색 유지 */
body.mobile-nav-active .mobile-frame .header, .mobile-frame .header.nav-open
	{
	background-color: rgba(100, 140, 164, .75) !important;
	backdrop-filter: saturate(140%) blur(8px) !important;
	box-shadow: 0 4px 16px rgba(0, 0, 0, .08) !important;
}

/* 카드 리스트 공통 */
.mobile-list .card {
	border-radius: 14px;
}

.mobile-list .card:hover {
	background: #fffdf8;
}

/* 긴 제목은 말줄임 한 줄 */
.mobile-list .text-truncate {
	display: -webkit-box;
	-webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
	overflow: hidden;
}
/* 폭이 좁을 때 auth 영역이 줄바꿈으로 빠지지 않게 */
@media ( max-width : 1200px) {
	#header .brand-text {
		display: none;
	} /* 필요시 로고 텍스트 숨김 */
}
</style>
