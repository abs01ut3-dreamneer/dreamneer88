/* 전체 탭 컨테이너 여백 조정 */
#resveTabs {
    gap: 10px;
}

/* 타원형 버튼 스타일 */
#resveTabs .nav-link {
    border-radius: 50px;
    /* 완전한 타원 */
    padding: 8px 20px;
    background-color: #f1f1f1;
    color: #333;
    font-weight: 500;
    transition: all 0.3s ease;
    border: 1px solid transparent;
}

/* 호버 효과 */
#resve .col-md-6:hover .js-resve-card, #resve .col-12:hover .js-resve-card
    {
    transform: scale(1.03);
    transition: 0.3s ease;
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.25);
    border-color: #66bb6a;
}

/* 활성 탭 (active 상태) */
#resveTabs .nav-link.active {
    background-color: #4caf50;
    color: white;
    border-color: #388e3c;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

/* CSS로 사진 넣기 */
#resve .col-md-6:nth-of-type(1) .js-resve-card {
    background: url('/images/socialSpace/bookCafe.png') center/cover
        no-repeat;
}

#resve .col-md-6:nth-of-type(2) .js-resve-card {
    background: url('/images/socialSpace/gym.png') center/cover no-repeat;
}

#resve .col-md-6:nth-of-type(3) .js-resve-card {
    background: url('/images/socialSpace/spa.png') center/cover no-repeat;
}

#resve .col-md-6:nth-of-type(4) .js-resve-card {
    background: url('/images/socialSpace/golf.jpeg') center/cover no-repeat;
}

#resve .row.gy-4>div:nth-child(5) .js-resve-card {
    background: url('/images/socialSpace/tableTenis.jpeg') center/cover
        no-repeat;
}

#resve .js-resve-card {
    border-radius: 14px;
    overflow: hidden;
    color: #fff;
    position: relative;
}

#resve .js-resve-card::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.7);
}

#resve .js-resve-card>div {
    position: relative;
    z-index: 1;
    /* CSS로 사진 넣기 끝 */
}