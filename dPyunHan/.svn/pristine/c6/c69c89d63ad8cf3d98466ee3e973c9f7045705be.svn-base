/* 모든 모달에서 사용할 통일된 스크롤 영역 */
.modal .modal-scroll-area {
    max-height: 60vh;   /* 모달 안에서만 스크롤되게 높이 제한 */
    overflow-y: auto;
}

/* 스크롤바 전체 */
.modal .modal-scroll-area::-webkit-scrollbar {
    width: 8px;
}

/* 스크롤 트랙 */
.modal .modal-scroll-area::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 8px;
}

/* 스크롤바 thumb */
.modal .modal-scroll-area::-webkit-scrollbar-thumb {
    background: #F66214;
    border-radius: 8px;
}

/* hover 시 thumb */
.modal .modal-scroll-area::-webkit-scrollbar-thumb:hover {
    background: #e06626;
}

/* 스크롤바 전체 */
.ntcn-dropdown-list::-webkit-scrollbar {
    width: 8px;
}

/* 스크롤 트랙(배경) */
.ntcn-dropdown-list::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 8px;
}

/* 스크롤 thumb(움직이는 부분) */
.ntcn-dropdown-list::-webkit-scrollbar-thumb {
    background: #F66214;
    border-radius: 8px;
}

/* hover 시 색 진하게 */
.ntcn-dropdown-list::-webkit-scrollbar-thumb:hover {
    background: #e06626;
}

