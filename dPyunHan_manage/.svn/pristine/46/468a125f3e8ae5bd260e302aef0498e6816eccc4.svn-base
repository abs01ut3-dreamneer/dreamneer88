	@Override
	@Transactional
	public int postElctrnsanctn(ElctrnsanctnVO elctrnsanctnVO, String sanctnlnList, String referenceList) {
		int result = this.elctrncsanctnMapper.postElctrnsanctn(elctrnsanctnVO);
		
		int elctrnsanctnSn = elctrnsanctnVO.getElctrnsanctnSn();
		
		ObjectMapper mapper = new ObjectMapper();
	    try {
			List<SanctnlnVO> sanctnlnVOList = mapper.readValue(
			    sanctnlnList,
			    new TypeReference<List<SanctnlnVO>>(){});
			
			List<DrftRefrnVO> drftRefrnVOList = mapper.readValue(
					referenceList,
				    new TypeReference<List<DrftRefrnVO>>(){});
			
			for(int i=0; i<sanctnlnVOList.size(); i++) {
				SanctnlnVO sanctnlnVO = sanctnlnVOList.get(i);
				sanctnlnVO.setElctrnsanctnSn(elctrnsanctnSn);
				if(sanctnlnVO.getSanctnOrdr()==sanctnlnVOList.size()) {
					sanctnlnVO.setDcrbmanAt(1);
				}		
				result += this.elctrncsanctnMapper.postSanctnln(sanctnlnVO);
			}
			
			for(DrftRefrnVO drftRefrnVO : drftRefrnVOList) {
				drftRefrnVO.setElctrnsanctnSn(elctrnsanctnSn);
				result += this.elctrncsanctnMapper.postDrftRefrn(drftRefrnVO);
			}
			
		} catch (JsonProcessingException e) {
			e.printStackTrace();
		}
	    
		return result;
	}

