<%@ page language="java" contentType="text/html; charset=UTF-8" %>
  <%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
    <%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt" %>
      <%@ taglib uri="http://java.sun.com/jsp/jstl/functions" prefix="fn" %>
        <!DOCTYPE html>
        <html>

        <head>
          <script type="text/javascript" src="/js/jquery-3.6.0.js"></script>
          <script type="text/javascript">
          	document.addEventListener("DOMContentLoaded", function(){
              document.querySelectorAll(".CcpyManageVORow").forEach(row=>{
                row.addEventListener("click", function(){
                  const ccpyManageId = this.querySelector("#ccpyManageId").value;
                  location.href="/ccpyManage/getCcpyManage?ccpyManageId="+ccpyManageId;
                })
              })
            })

          </script>
        </head>

        <body>
          <%@ include file="../include/header.jsp" %>
            <!-- ///// content 시작 ///// -->
            <div>
              <h3>협력업체 목록</h3>
            </div>

            <div class="card">
              <div class="card-header">
                <h3 class="card-title">검색 필터</h3>
                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                  <thead>
                    <tr>
                      <th>순번</th>
                      <th>업체 명</th>
                      <th>대표자 명</th>
                      <th>업체 주소</th>
                      <th>업체 연락처</th>
                      <th>업체 개업일자</th>
                      <th>업체 상태</th>
                    </tr>
                  </thead>
                  <tbody>
                    <c:forEach var="CcpyManageVO" items="${articlePage.content}">
                      <tr class="CcpyManageVORow">
                        <td>
                          ${CcpyManageVO.rnum }
                          <input type="hidden" value="${CcpyManageVO.ccpyManageId}" id="ccpyManageId" name="ccpyManageId"/>
                        </td>
                        <td>
                          ${CcpyManageVO.ccpyCmpnyNm }
                        </td>
                        <td>
                          ${CcpyManageVO.ccpyRprsntvNm }
                        </td>
                        <td>
                          ${CcpyManageVO.ccpyAdres }
                        </td>
                        <td>
                          ${CcpyManageVO.ccpyTelno }
                        </td>
                        <td>
                          ${CcpyManageVO.ccpyOpbizDe }
                        </td>
                        <td>
                        <c:choose>
                        	<c:when test="${CcpyManageVO.ccpySttus==2 }">
                        		<div class="bg-danger">${CcpyManageVO.ccpySttusAsStr }</div>
                        	</c:when>
                        	<c:when test="${CcpyManageVO.ccpySttus==2 }">
                        		<div class="bg-warning">${CcpyManageVO.ccpySttusAsStr }</div>
                        	</c:when>
                        	<c:otherwise>
                        		<div class="bg-success">${CcpyManageVO.ccpySttusAsStr }</div>
                        	</c:otherwise>
                        </c:choose>
                          
                        </td>
                      </tr>
                    </c:forEach>
                  </tbody>
                </table>
                <div>
                  ${articlePage.pagingArea}
                </div>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- ///// content 끝 ///// -->
            <%@ include file="../include/footer.jsp" %>
        </body>

        </html>