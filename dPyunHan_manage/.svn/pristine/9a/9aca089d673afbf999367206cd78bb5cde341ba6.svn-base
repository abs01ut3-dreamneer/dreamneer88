<%@ page language="java" contentType="text/html; charset=UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/functions" prefix="fn"%>
<!DOCTYPE html>
<html>
<head>
<title>공지사항</title>

</head>
<body>

	<%@ include file="../include/header.jsp"%>

	<div class="d-sm-flex align-items-center justify-content-between mb-4">
		<h1 class="h3 mb-0 text-gray-800">공지사항</h1>
	</div>
	
	<div>
		<button type="button" onclick="location.href='/notice/register'">공지등록</button>
	</div>

	<form action="/notice/list" method="get" style="margin-left: auto;">
		<input type="text" name="keyword" value="${param.keyword}"
			placeholder="검색어 입력" />
		<button type="submit">검색</button>
	</form>



	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>공지번호</th>
				<th>제목</th>
				<th>내용</th>
				<th>작성일</th>
				<th>직원명</th>
				<th>첨부파일</th>
			</tr>
		</thead>
		<tbody>
			<c:forEach var="noticeVO" items="${articlePage.content}">
				<tr onclick="location.href='/notice/detail/${noticeVO.noticeSn}'" style="cursor:pointer;">
					<td>${noticeVO.noticeSn}</td>
					<td>${noticeVO.noticeSj}</td>
					<td>${noticeVO.noticeCn}</td>
					<td><fmt:formatDate value="${noticeVO.noticeWritngDt}"
							pattern="yyyy-MM-dd HH:mm:ss" /></td>
					<td>${noticeVO.empId}</td>
					<td>${noticeVO.fileGroupSn > 0 ? "O" : "X"}</td>
				</tr>
			</c:forEach>
		</tbody>
	</table>

	<!-- 페이지네이션 UI -->
	<%-- <div style="text-align: center; margin-top: 10px;">
		<c:if test="${articlePage.startPage > 1}">
			<a
				href="/notice/list?currentPage=${articlePage.startPage - 1}&keyword=${param.keyword}">이전</a>
		</c:if>

		<c:forEach var="pageNum" begin="${articlePage.startPage}"
			end="${articlePage.endPage}">
			<c:choose>
				<c:when test="${pageNum == articlePage.currentPage}">
					<b>${pageNum}</b>
				</c:when>
				<c:otherwise>
					<a
						href="/notice/list?currentPage=${pageNum}&keyword=${param.keyword}">${pageNum}</a>
				</c:otherwise>
			</c:choose>
        &nbsp;
    </c:forEach>

		<c:if test="${articlePage.endPage < articlePage.totalPages}">
			<a
				href="/notice/list?currentPage=${articlePage.endPage + 1}&keyword=${param.keyword}">다음</a>
		</c:if> 
	</div> --%>
<!-- 간단한 페이지 네이션 위에 굳이 안써도됨 -->	
<div class="card-footer clearfix">
   ${articlePage.pagingArea}
</div>

	<%@ include file="../include/footer.jsp"%>

</body>
</html>