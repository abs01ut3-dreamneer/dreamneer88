package kr.or.ddit.service.impl;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.core.userdetails.UserDetails;
import org.springframework.security.core.userdetails.UserDetailsService;
import org.springframework.security.core.userdetails.UsernameNotFoundException;
import org.springframework.stereotype.Service;

import kr.or.ddit.mapper.EmpMapper;
import kr.or.ddit.vo.EmpVO;
import lombok.extern.slf4j.Slf4j;


@Slf4j
@Service
public class UserDetailServiceImpl implements UserDetailsService {

    @Autowired
    EmpMapper empMapper;
    
    @Override
    public UserDetails loadUserByUsername(String empId) throws UsernameNotFoundException{
        log.info("loadUserByUsername -> empId : "+empId);
        
      EmpVO empVO = this.empMapper.findByEmpId(empId);
        log.info("check : loadUserByUsername-> empVO"+ empVO );
        
        if(empVO == null){
            throw new UsernameNotFoundException("사용자 정보 없음: " + empId);
        }
    	return empVO == null ? null : new CustomUser(empVO);
    }

}
